<?xml version="1.0" encoding="UTF-8"?>
<openbox_config xmlns="http://openbox.org/3.4/rc" xmlns:xi="http://www.w3.org/2001/XInclude">
  <theme>
    <name>Arc-Dark</name>
    <titleLayout>NLIMC</titleLayout>
    <keepBorder>yes</keepBorder>
  </theme>

  <desktops>
    <number>4</number>
    <names><name>1</name><name>2</name><name>3</name><name>4</name></names>
  </desktops>

  <keyboard>
    <keybind key="W-Return"><action name="Execute"><command>xterm</command></action></keybind>
    <keybind key="W-q"><action name="Close"/></keybind>
    <keybind key="W-r"><action name="Reconfigure"/></keybind>
    <keybind key="W-Left"><action name="DesktopPrevious"/></keybind>
    <keybind key="W-Right"><action name="DesktopNext"/></keybind>
    <keybind key="Print"><action name="Execute"><command>scrot -q 100 ~/screenshot_%Y-%m-%d_%H-%M-%S.png</command></action></keybind>
    <keybind key="W-1"><action name="Execute"><command>~/.local/bin/res-1920x1080.sh</command></action></keybind>
    <keybind key="W-2"><action name="Execute"><command>~/.local/bin/res-3440x1440.sh</command></action></keybind>
  </keyboard>

  <menu>
    <file>menu.xml</file>
    <applicationIcons>no</applicationIcons>
  </menu>
</openbox_config>
