<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <menu id="root-menu" label="Openbox">
    <!-- Apps -->
    <item label="Terminal (xterm)">
      <action name="Execute"><command>xterm</command></action>
    </item>
    <item label="Virt-Manager">
      <action name="Execute"><command>virt-manager</command></action>
    </item>

    <separator/>

    <!-- Screenshots -->
    <menu id="screenshots" label="Screenshots">
      <item label="Full Screen">
        <action name="Execute">
          <command>scrot -q 100 ~/screenshot_full_%Y-%m-%d_%H-%M-%S.png</command>
        </action>
      </item>
      <item label="Active Window">
        <action name="Execute">
          <command>scrot -u -q 100 ~/screenshot_window_%Y-%m-%d_%H-%M-%S.png</command>
        </action>
      </item>
      <item label="Select Area">
        <action name="Execute">
          <command>scrot -s -q 100 ~/screenshot_area_%Y-%m-%d_%H-%M-%S.png</command>
        </action>
      </item>
    </menu>

    <!-- Display / Resolutions -->
    <menu id="display" label="Display">
      <item label="Resolution">
        <action name="Execute"><command>xterm -r res-xrandr.sh</command></action>
      </item>
    </menu>
    
    <separator/>

    <!-- System tools -->
    <menu id="system" label="System">
      <item label="System Monitor (btop)">
        <action name="Execute"><command>xterm -e btop</command></action>
      </item>
      <item label="Bluetooth (Bluetui)">
        <!-- wrapper installed as /usr/local/bin/bluetooth-tui; falls back to xterm -e bluetui if you prefer -->
        <action name="Execute"><command>xterm -e bluetui</command></action>
      </item>
      <item label="Sensors (watch)">
        <action name="Execute"><command>xterm -e watch -n 1 sensors</command></action>
      </item>
    </menu>

    <!-- Session actions -->
    <item label="Lock Screen">
      <action name="Execute"><command>slock</command></action>
    </item>

    <item label="Reconfigure Openbox">
      <action name="Reconfigure"/>
    </item>

    <menu id="session" label="Session">
      <item label="Logout (exit Openbox)">
        <action name="Exit"/>
      </item>
      <item label="Reboot">
        <action name="Execute"><command>systemctl reboot</command></action>
      </item>
      <item label="Shutdown">
        <action name="Execute"><command>systemctl poweroff</command></action>
      </item>
    </menu>
  </menu>
</openbox_menu>
