<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <menu id="root-menu" label="Openbox">
    <item label="Terminal (xterm)">
      <action name="Execute"><command>xterm</command></action>
    </item>

    <menu id="virtualization" label="Virtualization">
      <item label="Virt-Manager">
        <action name="Execute"><command>virt-manager</command></action>
      </item>
      <!-- Uncomment if you install virt-viewer
      <item label="Virt-Viewer">
        <action name="Execute"><command>virt-viewer</command></action>
      </item>
      -->
    </menu>

    <menu id="display" label="Display">
      <menu id="resolutions" label="Resolution">
        <item label="1920x1080">
          <action name="Execute"><command>~/.local/bin/res-1920x1080.sh</command></action>
        </item>
        <item label="3440x1440">
          <action name="Execute"><command>~/.local/bin/res-3440x1440.sh</command></action>
        </item>
      </menu>
    </menu>

    <menu id="screenshots" label="Screenshot">
      <item label="Full Screen">
        <action name="Execute"><command>scrot -q 100 ~/screenshot_full_%Y-%m-%d_%H-%M-%S.png</command></action>
      </item>
      <item label="Window">
        <action name="Execute"><command>scrot -u -q 100 ~/screenshot_window_%Y-%m-%d_%H-%M-%S.png</command></action>
      </item>
      <item label="Select Area">
        <action name="Execute"><command>scrot -s -q 100 ~/screenshot_area_%Y-%m-%d_%H-%M-%S.png</command></action>
      </item>
    </menu>

    <menu id="system" label="System">
      <item label="System Monitor (btop)">
        <action name="Execute"><command>xterm -e btop</command></action>
      </item>
      <item label="Bluetooth (Bluetui)">
        <action name="Execute"><command>xterm -e bluetui</command></action>
      </item>
      <item label="Restart Network">
        <action name="Execute"><command>systemctl restart systemd-networkd</command></action>
      </item>
      <item label="Sensors">
        <action name="Execute"><command>xterm -e watch -n 1 sensors</command></action>
      </item>
    </menu>

    <item label="Lock Screen">
      <action name="Execute"><command>slock</command></action>
    </item>

    <item label="Reconfigure Openbox">
      <action name="Reconfigure"/>
    </item>

    <menu id="session" label="Session">
      <item label="Logout (exit Openbox)"><action name="Exit"/></item>
      <item label="Reboot"><action name="Execute"><command>systemctl reboot</command></action></item>
      <item label="Shutdown"><action name="Execute"><command>systemctl poweroff</command></action></item>
    </menu>
  </menu>
</openbox_menu>
